#include <stdio.h>
#include <string.h>

// Structure to store person information
struct Person {
    char name[20];
    int age;
};

// Function to encode person information
void encode_person(const struct Person *person, char *encoded_data) {
    // Encode name (Type: 0x01)
    encoded_data[0] = 0x01;
    encoded_data[1] = strlen(person->name);
    memcpy(&encoded_data[2], person->name, strlen(person->name));

    // Encode age (Type: 0x02)
    encoded_data[2 + strlen(person->name)] = 0x02;
    encoded_data[3 + strlen(person->name)] = sizeof(int);
    memcpy(&encoded_data[4 + strlen(person->name)], &person->age, sizeof(int));
}

int main() {
    struct Person person;

    // Input name and age
    printf("Enter name: ");
    scanf("%s", person.name);
    printf("Enter age: ");
    scanf("%d", &person.age);

    // Calculate encoded data length
    int encoded_data_length = 2 + strlen(person.name) + 2 + sizeof(int);

    // Create buffer for encoded data
    char encoded_data[encoded_data_length];

    // Encode person information
    encode_person(&person, encoded_data);

    // Print encoded data in hexadecimal format
    printf("Encoded data: ");
    for (int i = 0; i < encoded_data_length; i++) {
        printf("%02X ", (unsigned char)encoded_data[i]);
    }
    printf("\n");

    return 0;
}
